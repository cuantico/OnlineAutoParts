<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	version="1.0">
	<persistence-unit name="myAutoService"  transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider> 
        <!-- JNDI name of the database resource to use -->
        <non-jta-data-source>jdbc/MyAutoService</non-jta-data-source>  
        <class>com.auto.service.entities.User</class>
        <class>com.auto.service.entities.UserTypes</class>
        <class>com.auto.service.entities.Contact</class>
        <class>com.auto.service.entities.Vehicles</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>  
            <property name="hibernate.hbm2ddl.auto" value="update"/> 
            <property name="hibernate.show_sql" value="true"/> 
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
        </properties> 
	</persistence-unit>
</persistence>